{
    "name": "ScreenTime",
    "version": "1.0.0",
    "manifest_version": 3,
    "action": {
      "default_title": "ScreenTime",
      "default_popup": "index.html"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "permissions": [
      "tabs",
      "activeTab",
      "storage",
      "background",
      "scripting",
      "unlimitedStorage"
    ]
  }